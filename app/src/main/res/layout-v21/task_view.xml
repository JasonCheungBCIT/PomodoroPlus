<?xml version="1.0" encoding="utf-8"?>
<!-- Notes: background is required! or there won't be elevation/shadow -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="15dp"
    android:elevation="3dp"
    android:background="#d3d3d3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Task Title"
        android:id="@+id/task_title"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time left"
        android:id="@+id/duration"
        android:textColor="#000000"
        android:layout_alignTop="@+id/task_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Category - API 21"
        android:textStyle="italic"
        android:id="@+id/category"
        android:textColor="#000000"
        android:layout_below="@+id/task_title"
        android:layout_alignLeft="@+id/task_title"
        android:layout_alignStart="@+id/task_title" />

</RelativeLayout>